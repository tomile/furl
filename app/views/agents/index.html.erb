<p id="notice"><%= notice %></p>

<h1>A Network of Referral Agents</h1>


<h3>COUNTING</h3>
<h4>We will display 9 agents per page</h4>
<h4><%= number_of_agents = @agents.count %> = number of agents</h4>
<h4><%= number_of_agents_on_last_page = number_of_agents % 9 %> = number of agents on last page. <br> if ZERO, then dont add 1 to "/9) + 1" to number_of_pages</h4> 

<% if number_of_agents % 9 != 0 %>
<h4><%= number_of_pages = number_of_agents / 9 + 1 %> = number of pages to display</h4>
<% else %>
<h4><%= number_of_pages = number_of_agents / 9 %> = number of pages to display</h4>
<% end %>

<nav aria-label="Page navigation">
  <ul class="pagination">
    <li>
      <a href="TBruby " aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>
    <% for p in 1..(number_of_pages) %>
      <li><a href="#">Page <%= "#{p}" %></a></li>
    <% end %>
    <li>
      <a href="#" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
      </a>
    </li>
  </ul>
</nav>
<h3>COUNTING</h3>


<div class="row">
  <% @agents.each do |agent| %>
    <div class="col-xs-4 col-sm-4 col-md-4">
      
        <img src="<%= agent.picture.thumb.url %>" alt="Agent Picture"><br>
        <div class="caption">
          <h3><%= agent.first_name %> <%= agent.last_name %></h3>
          <h3>About Me: <%= agent.bio %></h3>
          <h6>Contacted <%= agent.count_click_to_contact %></h6>
          <h6>Accepted <%= agent.count_click_to_accept %></h6>
          <h6>Closed <%= agent.count_closed %></h6>
          <%= link_to "More Info for this agent", agent, class: "btn btn-default" %>
        </div>
      
    </div> <!-- end of div class col-sm-3 -->
  <% end %>
</div>

