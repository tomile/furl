<p id="notice"><%= notice %></p>

<h1>All Referral Agents</h1>

<table>
  <thead>
    <tr>
      <th>Name </th>
      <th>Picture </th>
      <th>Bio </th>
      <th>Phone </th>
      <th>Email </th>
      <th>Website </th>
      <th>Contacted </th>
      <th>Accepted </th>
      <th>Closed </th>
      <th colspan="3">Show Edit Destroy</th>
    </tr>
  </thead>

  <tbody>
    <% @agents.each do |agent| %>
      <tr>
        <td><%= agent.first_name %> <%= agent.last_name %></td>
        <td><%= agent.picture %></td>
        <td><%= agent.bio %></td>
        <td><%= agent.phone %></td>
        <td><%= agent.email %></td>
        <td><%= agent.website %></td>
        <td><%= agent.count_click_to_contact %></td>
        <td><%= agent.count_click_to_accept %></td>
        <td><%= agent.count_closed %></td>
        <td>
          <%= link_to 'Show', agent %><br>
          <%= link_to 'Edit', edit_agent_path(agent) %><br>
          <%= link_to 'Destroy', agent, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

