<p id="notice"><%= notice %></p>

<h1>Listing Referrals</h1>

<div class="container">
  <div class="row well">
    <div class="col-md-2">Agent sending</div>
    <div class="col-md-2">Agent receiving</div>
    <div class="col-md-2">Prospect</div>
    <div class="col-md-1">Status</div>
  </div>
</div>


  


<div class="container">
  <% @referrals.each do |referral| %>
    <div class="row well">
      <div class="col-md-2"><%= referral.agent_sending.first_name %></div>
      <div class="col-md-2"><%= referral.agent_receiving.first_name %></div>
      <div class="col-md-2"><%= referral.prospect %></div>
      <div class="col-md-1"><%= referral.status %></div>
      <div class="col-md-2"><%= link_to 'Show', referral %></div>
      <div class="col-md-2"><%= link_to 'Edit', edit_referral_path(referral) %></div>
      <div class="col-md-1"><%= link_to 'Destroy', referral, method: :delete, data: { confirm: 'Are you sure?' } %></div>
    </div>
  <% end %>
</div>



